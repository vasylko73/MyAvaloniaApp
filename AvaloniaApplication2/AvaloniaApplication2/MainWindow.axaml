<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication2.MainWindow"
        Title="AvaloniaApplication2">
  <StackPanel Grid.Row="1">
    <TextBox Grid.Row="1" Name="MyTextBox" Margin="5" Text="{Binding Url}" />
    
<Button Grid.Row="2" Content="OK" Margin="5" Command="{Binding click}"/>
    <DockPanel>
      <TextBlock  TextAlignment="Center" Width="400" Text="Name" />
      <TextBlock  TextAlignment="Center" Text="Autors" />
    </DockPanel>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    <ListBox Margin="10" Items="{Binding Music}" Height="325">
      <ListBox.ItemTemplate>
       <DataTemplate>
        
          <DockPanel>
            <TextBlock  DockPanel.Dock="Left" Width="400" Text="{Binding MusicName}" />
          <TextBlock  DockPanel.Dock="Right" Text="{Binding Autors}" />
          </DockPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
      </ScrollViewer>
  </StackPanel>
</Window>
